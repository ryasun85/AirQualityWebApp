@model AirQualityWebApp.Models.AirQualityViewModel

@{
    ViewData["Title"] = "Cities";
}

<h3 class="alert-danger">@ViewBag.myErrorMsg</h3>

<div>
    @Html.ActionLink("Back to Countries List", "Countries", null, null,new { @class = "btn btn-primary" })
</div>

@if (Model.Cities != null && Model.Cities.Count() > 0)
{
    <h4>Please select city from the list below:</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.DisplayNameFor(model => model.Cities)
        </div>

        <div>
            @Html.DropDownListFor(model=> model.CityName, Model.Cities)
            <input type="submit" value="Select City" class="btn btn-success" />
        </div>
    }
}

